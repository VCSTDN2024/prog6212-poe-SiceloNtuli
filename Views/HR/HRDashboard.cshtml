@model List<PROG6212_Part1.Models.Claim>

<!-- Link to Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    /* Background styling for the entire page */
    body {
        background-image: url('https://t3.ftcdn.net/jpg/06/79/87/08/360_F_679870832_w2jlmfSex8CA5bPDoIoVMgHIdjWCSd7V.jpg');
        background-size: cover;
        background-attachment: fixed;
        background-position: center;
        font-family: 'Verdana', sans-serif; /* Global font */
        margin: 0;
        padding: 20px;
        color: gold; /* Global gold text color */
    }

    /* Container styling */
    .container {
        background-color: rgba(0, 0, 0, 0.8); /* Semi-transparent dark background */
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
        color: gold; /* Ensure all container text is gold */
    }

    /* Heading styling */
    h2, h3 {
        color: #FFD700; /* Gold for headings */
        text-align: center;
        font-weight: bold;
        margin-bottom: 20px;
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    /* Form labels */
    .form-label {
        color: #FFD700; /* Gold for form labels */
        font-weight: bold;
    }

    /* Input fields and select dropdown */
    .form-control, .form-select {
        background-color: rgba(255, 255, 255, 0.9); /* Light background for inputs */
        color: #000; /* Black text for inputs */
        border: 2px solid #FFD700; /* Gold border */
        border-radius: 8px;
        padding: 10px;
    }

    /* Buttons */
    .btn-primary, .btn-success {
        background-color: #FFD700; /* Gold button */
        border: none;
        color: #000; /* Black text on buttons */
        padding: 12px 20px;
        font-weight: bold;
        transition: background-color 0.3s;
    }

        .btn-primary:hover, .btn-success:hover {
            background-color: #FFC107; /* Slightly darker gold on hover */
            color: #000;
        }

    /* Additional decorative elements */
    hr {
        border-top: 2px solid gold; /* Gold divider */
        margin: 20px 0;
    }

    /* Link styling */
    a {
        color: #FFD700; /* Gold links */
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<div class="container mt-4">
    <h2>HR Dashboard</h2>
    <a href="@Url.Action("GenerateReport", "HR")" class="btn btn-primary mb-3">Generate Report</a>
    <hr>

    <h3>Lecturer Management</h3>

    <!-- Start of form with Bootstrap styling -->
    <form asp-action="UpdateLecturerInfo" method="post">
        <div class="mb-3">
            <label for="lecturerName" class="form-label">Select Lecturer:</label>
            <select name="LecturerName" class="form-select">
                @foreach (var lecturer in Model.Select(c => c.Lecturer).Distinct())
                {
                    <option value="@lecturer">@lecturer</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label for="NewLecturerName" class="form-label">New Name:</label>
            <input type="text" name="NewLecturerName" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="NewHourlyRate" class="form-label">New Hourly Rate:</label>
            <input type="number" name="NewHourlyRate" class="form-control" step="1.00" />
        </div>

        <div class="mb-3">
            <label for="NewContactInfo" class="form-label">New Contact Info:</label>
            <input type="text" name="NewContactInfo" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success w-100">Update Details</button>
    </form>
</div>

<!-- Bootstrap JS and Popper.js -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
